{
  "name": "@scarlett-game-studio/scarlett-framework",
  "shortName": "scarlett-framework",
  "version": "0.0.1",
  "description": "Scarlett WebGL Graphics Framework",
  "main": "src/index.js",
  "dependencies": {
    "babel-runtime": "6.23.0",
    "matter-js": "^0.10.0"
  },
  "scripts": {
    "test": "babel src/index.js --out-file index-compiled.js",
    "build": "webpack --config config/webpack.config.js",
    "editor-build": "cross-env NODE_ENV=es6 npm run build",
    "deploy": "cross-env NODE_ENV=production webpack -p --config config/webpack.config.js",
    "build:all": "rimraf build && npm run build && npm run editor-build && npm run deploy",
    "live-server": "webpack-dev-server -d --port 8080 --progress --colors --hot --config config/webpack.config.js",
    "watch": "npm run build -- -w",
    "start": "http-server -a localhost -p 8080 -c-1"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-loader": "7.0.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-3": "6.24.1",
    "cross-env": "5.0.0",
    "grunt": "~1.0.1",
    "grunt-babel": "^6.0.0",
    "grunt-contrib-concat": "~1.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-jshint": "~1.0.0",
    "grunt-contrib-uglify": "~1.0.1",
    "grunt-contrib-watch": "~1.0.0",
    "http-server": "0.10.0",
    "rimraf": "2.6.1",
    "sort-dependencies": "~0.1.1",
    "webpack": "2.6.1",
    "webpack-dev-server": "2.4.5",
    "webpack-notifier": "1.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scarlettgamestudio/scarlett-framework.git"
  },
  "author": "João Alves <joao.cpp.sca@gmail.com> and Luís Fernandes aka Apidcloud <luisapidcloud@hotmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/scarlettgamestudio/scarlett-framework/issues"
  },
  "homepage": "https://github.com/scarlettgamestudio/scarlett-framework#readme"
}
