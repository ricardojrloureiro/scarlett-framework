{
  "name": "@scarlett-game-studio/scarlett-framework",
  "shortName": "scarlett-framework",
  "version": "0.0.0-development",
  "description": "Scarlett WebGL Graphics Framework",
  "main": "build/dist/scarlett-framework.browser.min.js",
  "dependencies": {
    "babel-runtime": "6.23.0",
    "matter-js": "^0.10.0"
  },
  "scripts": {
    "start": "http-server -a localhost -p 8080 -c-1",
    "build": "webpack -d --config config/webpack.config.js",
    "editor-build": "cross-env NODE_ENV=es6 npm run build",
    "deploy": "cross-env NODE_ENV=production webpack -p --config config/webpack.config.js",
    "build:all": "rimraf build && npm run build && npm run editor-build && npm run deploy",
    "live-server": "webpack-dev-server -d --port 8082 --progress --colors --hot --config config/webpack.config.js",
    "editor-live-server": "cross-env NODE_ENV=es6 npm run live-server",
    "deploy-live-server": "cross-env NODE_ENV=production npm run live-server",
    "watch": "npm run build -- -w",
    "test": "jest --coverage --no-cache",
    "watch:test": "cross-env CI=true jest --watch",
    "report-coverage": "codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@types/jest": "19.2.3",
    "babel-cli": "6.24.1",
    "babel-jest": "20.0.3",
    "babel-loader": "7.0.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-3": "6.24.1",
    "codecov": "2.2.0",
    "commitizen": "2.9.6",
    "cross-env": "5.0.0",
    "cz-conventional-changelog": "2.0.0",
    "grunt": "~1.0.1",
    "grunt-babel": "^6.0.0",
    "grunt-contrib-concat": "~1.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-jshint": "~1.0.0",
    "grunt-contrib-uglify": "~1.0.1",
    "grunt-contrib-watch": "~1.0.0",
    "http-server": "0.10.0",
    "husky": "0.13.4",
    "jest": "20.0.4",
    "rimraf": "2.6.1",
    "semantic-release": "^6.3.6",
    "sort-dependencies": "~0.1.1",
    "ts-jest": "20.0.5",
    "ts-loader": "2.1.0",
    "typescript": "2.3.4",
    "typescript-babel-jest": "1.0.3",
    "validate-commit-msg": "2.12.1",
    "webpack": "2.6.1",
    "webpack-dev-server": "2.4.5",
    "webpack-notifier": "1.5.0"
  },
  "files": [
    "build",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "!src/**/index.ts",
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scarlettgamestudio/scarlett-framework.git"
  },
  "author": "João Alves <joao.cpp.sca@gmail.com> and Luís Fernandes aka Apidcloud <luisapidcloud@hotmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/scarlettgamestudio/scarlett-framework/issues"
  },
  "homepage": "https://github.com/scarlettgamestudio/scarlett-framework#readme"
}
